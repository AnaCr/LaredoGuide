<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BrowseRestaurantsActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/item_parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_drawable_image_view"
            android:layout_width="@dimen/size_image_small"
            android:layout_height="@dimen/size_image_small"
            android:layout_weight="1"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/item_name_text_view"
            style="@style/RegularStyle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/attraction_name"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>
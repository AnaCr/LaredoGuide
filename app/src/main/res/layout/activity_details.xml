<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large"
    tools:context=".DetailsActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/attraction_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_image_large"
        android:gravity="center"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/name"
        style="@style/AttractionCategoryStyle"
        android:gravity="center"
        android:text="@string/attraction_name" />

    <TextView
        android:id="@+id/website"
        style="@style/AttractionCategoryStyle"
        android:text="@string/attraction_website" />

    <TextView
        android:id="@+id/address"
        style="@style/AttractionCategoryStyle"
        android:text="@string/attraction_address" />

    <TextView
        android:id="@+id/phone"
        style="@style/AttractionCategoryStyle"
        android:text="@string/attraction_phone" />

</LinearLayout>